<%= form_for(@message, html:{class: "form-horizontal"}) do |f| %>
    <%if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_messages| %>
                <li>
                    <%= full_messages %>
                </li>
                <% end %>
            </ul>
         </div>
    <% end %>


    <div class="form-group">
        <label for="message_name" class ="col-sm-1 control-label">名前：</label>
        <div class="col-sm-5">
            <%= f.text_field :name,class: "form-control",id:"message_name" %>
        </div>
        <label for="message_age" class ="col-sm-1 control-label">年齢：</label>
        <div class="col-sm-1">
             <%= f.text_field :age,class: "form-control",id:"message_age" %>    
        </div>
        <div class="col-sm-2">
        </div>
    </div>
    <div class="form-group">    
        <label for="message_body" class ="col-sm-1 control-label">内容：</label>
        <div class="col-sm-11">
            <%= f.text_area :body,rows:10,class:"form-control",id:"message_body" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-11">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>
