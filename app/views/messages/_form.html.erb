<%= form_for(@message) do |f| %>
    <%if @message.errors.present? %>
        <div clsass="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_messages| %>
                <li>
                    <%= full_messages %>
                </li>
                <% end %>
            </ul>
         </div>
    <% end %>

    名前：
    <%= f.text_field :name %>
    
    年齢：
    <%= f.text_field :age %>

    内容：
    <%= f.text_field :body %>
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>